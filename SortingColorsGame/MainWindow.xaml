            <Label x:Name="name_label" Content=" Name Team" Margin="43.281,-14.388,47.175,31.2" FontSize="22" FontFamily="OCR A Extended" Grid.Row="1" Height="43.969" VerticalAlignment="Bottom"/>
            <TextBox x:Name="team_name_textBox" Margin="10,0,0,0" TextWrapping="Wrap" Grid.Row="1" FontSize="20" Height="31.2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="229.799"/>
